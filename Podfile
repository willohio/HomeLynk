platform :ios, '9.0'
use_frameworks!

target 'HomeLynk' do
	pod 'XCGLogger', '~> 3.2' 							#Log with different log levels
	pod 'IQKeyboardManagerSwift', '~> 3.3.5'					#Move Texfields aboe keyboard without scroll views
	pod 'M13Checkbox', '~> 1.1.2'							#Checkbox
	pod 'ViewDeck', '~> 2.4'							#Side menu
	pod 'TTRangeSlider', :git => 'https://github.com/TomThorpe/TTRangeSlider'	#Dual-thumb slider
	pod 'SMPageControl'								#Custom images for page views
        pod 'Alamofire', '~> 3.0'							#Networking
        pod 'SwiftyJSON', :git => 'https://github.com/SwiftyJSON/SwiftyJSON.git'	#Error-free JSON parsing
	pod 'Locksmith', '~> 2.0.1'							#Keychain access
	pod 'SnapKit', '~> 0.19.0'
	pod 'SWXMLHash', '~> 2.1.0'							#Error-free XML parsing'
	pod 'HNKGooglePlacesAutocomplete', '~> 1.1'					#iOS wrapper for Google Autocomplete
	pod 'LMGeocoder'
end
